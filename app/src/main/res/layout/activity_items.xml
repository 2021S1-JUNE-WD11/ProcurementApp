<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsActivity"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluebar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/allimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_dehaze_24px"/>


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cb"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="24sp" />



            <TextView
                android:id="@+id/itm_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cb"
                android:text="Available qty"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/itm_sup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cb"
                android:text="supplier"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/itm_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cb"
                android:text="Price $"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/add_items"
                android:layout_width="30dp"
                android:layout_height="54dp"
                android:src="@android:drawable/ic_input_add"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/detail_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cb"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                />

            <ImageView
                android:id="@+id/remove_items"
                android:layout_width="30dp"
                android:layout_height="54dp"
                android:layout_marginLeft="6dp"
                android:src="@android:drawable/ic_input_add"
                app:srcCompat="@android:drawable/button_onoff_indicator_on" />



            <ImageView
                android:id="@+id/gobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_sent"
                android:layout_gravity="end"
                android:layout_marginTop="17dp"
                android:layout_marginRight="5dp"/>


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>