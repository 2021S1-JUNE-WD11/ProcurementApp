<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

      <ImageView
            android:id="@+id/sup_item_img"
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/_92_768x591"
          />

        <TextView
            android:id="@+id/Sup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cb"
            android:text="Recent Items"
            android:textSize="19sp"
            />

        <TextView
            android:id="@+id/Sup_loc"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/cb"
            android:text="Suplier"/>

        <TextView
            android:id="@+id/sup_mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/cb"
            android:gravity="end"
            android:text="Price" />

        <TextView
            android:id="@+id/supid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/cb"
            android:gravity="end"
            android:text="Available qty:" />




    </LinearLayout>



</androidx.cardview.widget.CardView>